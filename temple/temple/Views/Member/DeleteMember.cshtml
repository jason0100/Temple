@model temple.Models.MemberData.member
@{
    ViewData["Title"] = "刪除信徒個人資料";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">刪除信徒個人資料</h4>
                @if (TempData["msg"] != null)
                {
                    <p class="text-danger">@TempData["msg"]</p>
                    <a class="btn btn-primary" asp-action="Get">返回</a>
                }
                else
                {
                    <form asp-action="DeleteMember">
                        <label asp-for="Name"></label>
                        <p>@Model.Name</p>
                        <label asp-for="MemberId"></label>
                        <p>@Model.MemberId</p>
                        <button class="btn btn-inverse-danger" type="submit"><i class="mdi mdi-delete-forever"></i>刪除</button>
                        <a class="btn btn-primary" asp-action="GetMember">取消</a>

                        <input id="msg" hidden value="@TempData["msg"]" />
                        @if (TempData["isSuccess"] != null)
                        {
                            <input id="isSuccess" hidden value="@TempData["isSuccess"].ToString()" />
                        }
                        <div id="msgDiv"></div>

                    </form>
                }


            </div>
        </div>
    </div>
</div>
