@model temple.Models.FinancialRecord.FinancialRecord
@{
    ViewData["Title"] = "刪除收入紀錄";
}




<div class="page-header">
    <h3 class="page-title">廟宇收入交易紀錄</h3>
      <input id="msg" hidden value="@TempData["msg"]" />
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">刪除收入紀錄</h4>

                <div class="rank-table">
                    <form asp-action="Delete">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>編號</th>
                                    <th>姓名</th>
                                    <th>時間</th>
                                    <th>交易項目</th>
                                    <th>數量</th>
                                    <th>金額</th>
                                    <th>位置</th>
                                    <th>到期日</th>
                                    <th>備註</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {


                                    <tr>
                                        <td>@Model.Id</td>
                                        <td>@Model.CustomerName</td>
                                        <td>@Model.CreateDate</td>
                                        <td>@Model.FinancialItem.Name</td>
                                        <td>@Model.Quantity</td>
                                        <td>@Model.Amount</td>
                                        <td>@Model.Position</td>
                                        <td>@Model.DueDate</td>
                                        <td>@Model.Notes</td>


                                    </tr>

                                }

                            </tbody>
                        </table>
                        <button class="btn btn-inverse-danger" type="submit"><i class="mdi mdi-delete-forever"></i>刪除</button>
                        <a class="btn btn-primary" asp-action="GetIncome" asp-route-Type="收入">取消</a>
                    </form>


                      <input id="msg" hidden value="@TempData["msg"]" />
                </div>

            </div>
        </div>
    </div>


    @section Scripts{
        <script nonce="KUY8VewuvyUYVEIvEFue4vwyiuf">
  
   
    var msg = '@TempData["msg"]';
    var IsSuccess = '@TempData["IsSuccess"]';
    console.log(IsSuccess + msg);
    if (msg != '') {
        showAlert(IsSuccess, msg);
    }


        </script>
}
