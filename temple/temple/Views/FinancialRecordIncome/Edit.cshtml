@model temple.Models.FinancialRecord.FinancialRecord
@{
    ViewData["Title"] = "編輯收入紀錄";
}

<div class="page-header">
    <h3 class="page-title">廟宇收入交易紀錄</h3>

    <input id="msg" hidden value="@TempData["msg"]" />
    @if (TempData["isSuccess"] != null)
    {
        <input id="isSuccess" hidden value="@TempData["isSuccess"].ToString()" />
    }
    <div id="msgDiv"></div>
</div>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">編輯收入紀錄</h4>
                <p class="form-title card-description">基本資料</p>
                <form class="forms-sample" method="post" asp-action="Edit" asp-route-Type="收入" autocomplete="off">
                  
                    <div class="row">
                        <div class="col-md form-group required">
                            <label class="col-form-label" asp-for="CustomerName">姓名</label>
                            <input class="form-control" asp-for="CustomerName">
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="col-md form-group required">
                            <label class="col-form-label" asp-for="CustomerPhone">手機</label>
                            <input class="form-control" asp-for="CustomerPhone">
                            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                        </div>
                        <div class="col-md form-group">
                            <label class="col-form-label" asp-for="LandPhone">市話</label>
                            <input type="text" class="form-control" asp-for="LandPhone">
                            <span asp-validation-for="LandPhone" class="text-danger"></span>
                        </div>
                    </div>
                    <p class="form-title card-description">收入項目</p>

                    <div class="row">


                        <div class="col-md-3 form-group required">
                            <label class="col-form-label" asp-for="FinancialItemId">項目</label>

                            <select id="FinancialItemId" class="form-control" asp-for="FinancialItemId" asp-items="@(Model.FinancialItems)">
                                <option value="">請選擇</option>
                            </select>
                            <span asp-validation-for="FinancialItemId" class="text-danger"></span>
                        </div>
                        <div class="col-md-2 form-group required">
                            <label class="col-form-label" asp-for="Quantity">數量</label>
                            <input class="form-control" asp-for="Quantity" type="number" min="1">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 form-group required">
                            <label class="col-form-label" asp-for="Amount">收入金額</label>
                            <input class="form-control" asp-for="Amount" type="number" min="0">
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div id="forLight" class="row">
                        <div class="col-md-3 form-group required">
                            <label class="col-form-label" asp-for="DueDate">到期時間</label>
                            <input class="form-control" asp-for="DueDate" id="DueDateInput" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-2 form-group required">
                            <label class="col-form-label" asp-for="Place">方位</label>
                            <select class="form-control" asp-for="Place" id="directionSelect">
                                <option value="">請選擇</option>
                                <option value="龍">龍</option>
                                <option value="虎">虎</option>
                            </select>
                            <span asp-validation-for="Place" class="text-danger"></span>
                        </div>
                        <div class="col-md-2 form-group required">
                            <label class="col-form-label" asp-for="Position">位置</label>
                            <input class="form-control" type="text" asp-for="Position" id="positionInput">
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">


                        <div class="col-md-12 form-group">
                            <label class="col-form-label" asp-for="Notes">備註</label>
                            <textarea class="form-control" asp-for="Notes"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <div class="form-check form-check-flat form-check-primary">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input">列印感謝狀
                                </label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <a class="btn btn-light" asp-action="GetIncome" asp-route-Type="收入">取消</a>
                </form>
            </div>
        </div>
    </div>
</div>