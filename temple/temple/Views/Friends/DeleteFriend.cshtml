@model temple.Models.FriendsController.Friend
@{
    ViewData["Title"] = "刪除友宮資料";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">刪除友宮資料</h4>
                @if (TempData["isSuccess"].ToString() == "false")
                {

                    <p class="text-danger">@TempData["msg"]</p>
                    <a class="btn btn-primary" asp-action="Get">返回</a>


                }
                else
                {
            <form asp-action="DeleteFriend">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>友宮名稱</th>
                            <th>主祀神明</th>
                            <th>聖誕日期</th>
                            <th>活動日期</th>
                            <th>地址</th>
                            <th>電話</th>
                            <th>聯絡人</th>
                            <th>備註</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {

                            <tr>
                                <td>@Model.Name</td>
                                <td>@Model.MainGod</td>
                                <td>@Model.BirthDate</td>
                                <td>@Model.ActivityDate</td>
                                @*<td>@Model.townShip.Zip @Model.city.Name @Model.townShip.Name @Model.Address</td>*@
                                <td> @Model.Address</td>
                                <td>@Model.Phone</td>
                                <td>@Model.ContactName</td>
                                <td>@Model.Notes</td>


                            </tr>

                        }


                    </tbody>
                </table>


                <button class="btn btn-inverse-danger" type="submit"><i class="mdi mdi-delete-forever"></i>刪除</button>
                <a class="btn btn-primary" asp-action="GetFriend">取消</a>

                <input id="msg" hidden value="@TempData["msg"]" />
                @if (TempData["isSuccess"] != null)
                {
                    <input id="isSuccess" hidden value="@TempData["isSuccess"].ToString()" />
                }
                <div id="msgDiv"></div>

            </form>
                }


            </div>
        </div>
    </div>
</div>
